		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null">
					id,
			</if>
			<if test="accountId != null">
					accountId,
			</if>
			<if test="mac != null">
					mac,
			</if>
		</trim>
		VALUES
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null">
	 #{id},
			</if>
			<if test="accountId != null">
	 #{accountId},
			</if>
			<if test="mac != null">
	 #{mac},
			</if>
		</trim>
		<selectKey resultType="Long" keyProperty="id">
