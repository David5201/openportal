		</if>
		<if test="showInfo != null">
			showInfo = #{showInfo},
		</if>
		<if test="showImg != null">
			showImg = #{showImg},
		</if>
		<if test="showCount != null">
			showCount = #{showCount},
		</if>
		<if test="clickCount != null">
			clickCount = #{clickCount},
		</if>
		<if test="url != null">
			url = #{url},
		</if>
		<if test="lockTime != null">
