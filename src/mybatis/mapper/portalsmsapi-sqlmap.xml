	<!-- Select SQL -->
	<sql id="portalsmsapiSelector">
		SELECT
			<if test="fields != null">
${fields}			</if>
			<if test="fields == null">
			id,name,url,count,state,type,more,time,text,appkey,appsecret,smssign,smstemplate,company
			</if>
		
		FROM portal_smsapi
	</sql>
	<sql id="portalsmsapiListWhere">
		<where>
		    <if test="id != null">
			 and 
				id=#{id}
			</if>
		    <if test="name != null">
			 and 
			<if test="nameLike == 0">
				name=#{name}
			</if>
			<if test="nameLike == 1">
				name like CONCAT('%','${name}','%')
			</if>
			</if>
		    <if test="url != null">
			 and 
			<if test="urlLike == 0">
				url=#{url}
			</if>
			<if test="urlLike == 1">
				url like CONCAT('%','${url}','%')
			</if>
			</if>
		    <if test="count != null">
			 and 
				count=#{count}
			</if>
		    <if test="state != null">
			 and 
			<if test="stateLike == 0">
				state=#{state}
			</if>
			<if test="stateLike == 1">
				state like CONCAT('%','${state}','%')
			</if>
			</if>
		    <if test="type != null">
			 and 
			<if test="typeLike == 0">
				type=#{type}
			</if>
			<if test="typeLike == 1">
				type like CONCAT('%','${type}','%')
			</if>
			</if>
		    <if test="more != null">
			 and 
			<if test="moreLike == 0">
				more=#{more}
			</if>
			<if test="moreLike == 1">
				more like CONCAT('%','${more}','%')
			</if>
			</if>
		    <if test="time != null">
			 and 
				time=#{time}
			</if>
		    <if test="text != null">
			 and 
			<if test="textLike == 0">
				text=#{text}
			</if>
			<if test="textLike == 1">
				text like CONCAT('%','${text}','%')
			</if>
			</if>
		    <if test="appkey != null">
			 and 
			<if test="appkeyLike == 0">
				appkey=#{appkey}
			</if>
			<if test="appkeyLike == 1">
				appkey like CONCAT('%','${appkey}','%')
			</if>
			</if>
		    <if test="appsecret != null">
			 and 
			<if test="appsecretLike == 0">
				appsecret=#{appsecret}
			</if>
			<if test="appsecretLike == 1">
				appsecret like CONCAT('%','${appsecret}','%')
			</if>
			</if>
		    <if test="smssign != null">
			 and 
			<if test="smssignLike == 0">
				smssign=#{smssign}
			</if>
			<if test="smssignLike == 1">
				smssign like CONCAT('%','${smssign}','%')
			</if>
			</if>
		    <if test="smstemplate != null">
			 and 
			<if test="smstemplateLike == 0">
				smstemplate=#{smstemplate}
			</if>
			<if test="smstemplateLike == 1">
				smstemplate like CONCAT('%','${smstemplate}','%')
			</if>
			</if>
		    <if test="company != null">
			 and 
			<if test="companyLike == 0">
				company=#{company}
			</if>
			<if test="companyLike == 1">
				company like CONCAT('%','${company}','%')
			</if>
			</if>
		</where>
	</sql>

	<!-- 用#号会导致druid连接池报错 -->
	<sql id="portalsmsapiListOrder">
		
			<if test="orderFields != null and orderFields.size >0">
			ORDER BY
			<foreach collection="orderFields" separator="," item="orderField">
				${orderField.fieldName} ${orderField.order}
			</foreach>
			</if>
		
	</sql>
	
	

